<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.KayitislemleriFragment">


    <TextView
        android:id="@+id/ad_sifre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="AD VE ŞIFRE"
        android:textColor="@color/siyah"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/adinEndsoyadin"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@drawable/register_edit_text"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="adın ve soyadın"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ad_sifre"
        android:layout_marginTop="16dp"/>
    <EditText
        android:id="@+id/sifre"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@drawable/register_edit_text"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="şifre"
        android:inputType="textPassword"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adinEndsoyadin"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/nickName"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@drawable/register_edit_text"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="KUllanıcı adın"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sifre"
        android:layout_marginTop="16dp"/>



    <TextView
        android:id="@+id/btnGiris"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Giriş"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/sonukmavi"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:enabled="false"
        android:background="@drawable/register_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nickName" />







    <View
        android:id="@+id/viewGolgelikregister"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/golgelik"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hesabın zaten var mı ?"
        app:layout_constraintTop_toBottomOf="@id/viewGolgelikregister"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="110dp"
        />
    <TextView
        android:id="@+id/kayitislemleri_hesabinvarmi_giris"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giriş Yap"
        android:textStyle="bold"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/viewGolgelikregister"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="75dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>